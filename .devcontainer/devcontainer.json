{
    "name": "Next.js + pnpm",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "pnpm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss"
            ]
        }
    },
    "mounts": [
        "source=nextjs_node_modules,target=/workspace/node_modules,type=volume"
    ],
    "remoteUser": "node"
}